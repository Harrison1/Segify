<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.harrisonmcguire.segify" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.harrisonmcguire.segify.VolleyPackage.VolleySingletonClass"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainPackage.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:label="PostSelected"
            android:name="com.harrisonmcguire.segify.MainPackage.PostSelected" >
        </activity>

        <activity
            android:label="WebView"
            android:name="com.harrisonmcguire.segify.MainPackage.WebViewActivity" >
        </activity>

    </application>

</manifest>